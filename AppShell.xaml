<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskPlannerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskPlannerApp"
    Title="TaskPlannerApp">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

        <ShellContent 
            Title="H" 
            ContentTemplate="{DataTemplate local:HomePage}" 
            Route="HomePage" />

        <ShellContent 
            Title="Tasks" 
            ContentTemplate="{DataTemplate local:TaskListPage}" 
            Route="TaskListPage" />

        <ShellContent 
            Title="Calendar" 
            ContentTemplate="{DataTemplate local:CalendarPage}" 
            Route="CalendarPage" />

        <ShellContent 
            Title="Profile" 
            ContentTemplate="{DataTemplate local:ProfilePage}" 
            Route="ProfilePage" />

    </TabBar>
</Shell>
